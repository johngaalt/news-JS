{
    "compilerOptions": {
        "target": "ES2016",
        "module": "CommonJS",
        "moduleResolution": "node",
        "allowJs": true,
        "outDir": "./dist/",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true
    }
}
